{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "build",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": "."
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
